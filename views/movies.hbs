<section class="container">
    <h1>Movie Results</h1>
    {{#each movies}}
        <div class="review">
            <div class="column-right">
                <h3 name="title">Title:  {{Title}}</h3>
                <p class="p-last">Release Year: {{Year}}</p>
                <form action="/movies/id">
                    <button class="btn btn-reverse" name="imdbID" value={{imdbID}} type="submit">Get More Info</button>
                </form>
            </div>
            {{#if_eq Poster 'N/A'}}
                <img src={{Poster}} width="175" height="250">
            {{else}}                 
                <img id="currentPhoto" width="175" height="250">
            {{/if_eq}}
        </div>
     {{/each}}
</section>
